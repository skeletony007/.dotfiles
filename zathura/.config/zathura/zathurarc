# Zathura configuration file
# See man `man zathurarc'


# One page per row by default
set pages-per-row 1

# maps
map r reload
map p print
map i recolor
map J zoom out
map K zoom in
map R rotate

set scroll-step 1
set scroll-hstep 1

#zoom settings
set zoom-min 10
set guioptions ""

# zathurarc-dark
set font "UbuntuMono Nerd Font Mono 28"
include colors.conf

set selection-clipboard clipboard
set render-loading "false"
set scroll-step 50
set scroll-hstep 50
