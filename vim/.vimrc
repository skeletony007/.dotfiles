syntax on

set termguicolors

colorscheme gruvbox
set background=dark
hi Normal guibg=NONE ctermbg=NONE

let g:netrw_browse_split=0
let g:netrw_banner=0
let g:netrw_winsize=25

set nu
set relativenumber

set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

set smartindent

set nowrap

" prevent conflicts nvim
set noswapfile
set nobackup
set undodir=
set noundofile

set nohlsearch
set incsearch

set scrolloff=8
set signcolumn=yes

set updatetime=50

set colorcolumn=80
